{
    "name": "react-native-styled-paper",
    "version": "1.0.0-develop.2",
    "description": "",
    "main": "dist/index.js",
    "types": "types/index.d.ts",
    "scripts": {
        "build": "yarn build:types && yarn compile",
        "build:types": "rimraf -rf types && tsc --emitDeclarationOnly -p tsconfig-types.json",
        "compile": "rimraf -rf dist && babel src/ --out-dir dist --extensions \".ts,.tsx\"",
        "postcompile": "node buildScripts/postCompile.js",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
        "release": "semantic-release",
        "type-check": "tsc --noEmit",
        "format": "eslint . --ext ts --ext tsx --ext js --fix",
        "lint": "eslint . --ext ts --ext tsx --ext js",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/react-native-styled-paper/react-native-styled-paper.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/react-native-styled-paper/react-native-styled-paper/issues"
    },
    "homepage": "https://github.com/react-native-styled-paper/react-native-styled-paper#readme",
    "devDependencies": {
        "@babel/cli": "^7.12.10",
        "@babel/core": "^7.12.10",
        "@babel/plugin-proposal-class-properties": "^7.12.1",
        "@babel/plugin-transform-runtime": "^7.12.10",
        "@babel/preset-env": "^7.12.11",
        "@babel/preset-react": "^7.12.10",
        "@babel/preset-typescript": "^7.12.7",
        "@semantic-release/exec": "^5.0.0",
        "@semantic-release/github": "^7.2.0",
        "@semantic-release/npm": "^7.0.10",
        "@types/color": "^3.0.1",
        "@types/react": "^16.13.1",
        "@types/react-native": "^0.63.45",
        "@types/styled-components": "^5.1.7",
        "@types/styled-components-react-native": "^5.1.0",
        "@typescript-eslint/eslint-plugin": "^4.14.0",
        "@typescript-eslint/parser": "^4.14.0",
        "babel-plugin-module-resolver": "^4.1.0",
        "conventional-changelog-cli": "^2.1.1",
        "customize-cra": "^1.0.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^7.18.0",
        "eslint-plugin-react": "^7.22.0",
        "fs-extra": "^9.1.0",
        "husky": "^4.3.8",
        "metro-react-native-babel-preset": "^0.64.0",
        "react": "16.13.1",
        "react-app-rewired": "^2.1.8",
        "react-native": "0.63.2",
        "react-scripts": "^4.0.1",
        "semantic-release": "^17.3.6",
        "styled-components": "^5.2.1",
        "typescript": "^3.9.3"
    },
    "peerDependencies": {
        "react": "16.13.1",
        "react-native": "0.63.2",
        "styled-components": "^5.2.1"
    },
    "dependencies": {
        "@commitlint/config-conventional": "^11.0.0",
        "color": "3.1.2",
        "commitlint": "^11.0.0"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
